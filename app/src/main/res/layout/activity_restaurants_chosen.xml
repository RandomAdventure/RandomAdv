<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suhirtha.randomadventure.activities.RandomizeActivity"
    android:background="@color/lightTeal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/rcaToolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/black"
        android:background="@color/darkTeal"
        >

    <ImageView
        android:id="@+id/rcaLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/logo75" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginRight="?attr/actionBarSize"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/ic_arrow_back_black_24dp"
        style="@style/Widget.AppCompat.ActionButton"
        android:onClick="onClickBack"
        android:backgroundTint="@android:color/white"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:onClick="onClickDelete"
            />

    </android.support.v7.widget.Toolbar>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rcaToolbar" />

</RelativeLayout>
